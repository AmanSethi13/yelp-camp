<%- include ("../partials/header") %>
<div class="container" style="text-align: center;">
<h1>Create a new Campground</h1>
<div class="row" >
    <div style="width: 30%; margin: 30px auto;">
        <form action="/campgrounds" method="post">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="name" name="name" required>
            </div>
            <div class="form-group">
            <div class="form-group">
                <input class="form-control" type="number" placeholder="price" name="price" min="0.01" step="0.01">
            </div>
           
            <input class="form-control" type="text" placeholder="image Url" name="image" required>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="description" name="description" required>
        </div>
            <div class="form-group">
                <button class="btn btn-md btn-primary btn-block">Submit !</button>
            </div>
        </form>
    </div>
</div>
<a href="/campgrounds">Go back</a>
</div>
<%- include ("../partials/footer") %>