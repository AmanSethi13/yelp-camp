<%- include ("../partials/header") %>
<div class="container" style="text-align: center;">
    <h1>Edit Comment</h1>
    <div class="row">
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=comment.text%> " name="comment[text]" required>
                </div>


                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Submit !</button>
                </div>
            </form>
        </div>
    </div>
    <a href="/campgrounds">Go back</a>
</div>
<%- include ("../partials/footer") %>
